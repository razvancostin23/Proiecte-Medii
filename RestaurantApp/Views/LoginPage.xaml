<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantApp.Views.LoginPage"
             Title="Autentificare">
    <StackLayout Padding="30" VerticalOptions="Center">
        <Label Text="Autentificare" FontSize="28" HorizontalOptions="Center" />
        <Entry x:Name="usernameEntry" Placeholder="Utilizator" />
        <Entry x:Name="passwordEntry" Placeholder="Parolă" IsPassword="True"/>
        <Button Text="Autentificare" Clicked="OnLoginClicked" />
        <Button Text="Nu ai cont? Înregistrează-te aici" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>
