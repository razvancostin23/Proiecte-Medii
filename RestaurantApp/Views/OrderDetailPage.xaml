<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantApp.Views.OrderDetailPage"
             Title="Detalii Comandă">
    <StackLayout Padding="10" Spacing="10">
        <Entry x:Name="reservationIdEntry" Placeholder="ID Rezervare" Keyboard="Numeric"/>
        <DatePicker x:Name="orderDatePicker"/>
        <TimePicker x:Name="orderTimePicker"/>
        <Entry x:Name="totalAmountEntry" Placeholder="Total (RON)" Keyboard="Numeric"/>
        <Button Text="Salvează" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>
